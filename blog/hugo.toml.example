baseURL = "https://your-blog-url.com/"
languageCode = "en-us"
title = "Your Blog Title"

enableRobotsTXT = true
buildDrafts = false
buildFuture = false
buildExpired = false

[services]
  [services.googleAnalytics]
    ID = "G-XXXXXXXXXX" # Your Google Analytics ID

[minify]
  disableXML = true
  minifyOutput = true

[pagination]
  pagerSize = 5

[params]
  env = "production"
  author = "Your Author Name"
  description = "An experimental and fully automated analysis of the latest in tech, gaming, and the maker world from a Singaporean perspective. Content is AI-generated and unmanned."
  ShowReadingTime = true
  ShowShareButtons = true
  ShowPostNavLinks = true
  ShowBreadCrumbs = true
  ShowCodeCopyButtons = true
  ShowWordCount = true
  ShowRssButtonInSectionTermList = true
  UseHugoToc = true
  defaultTheme = "dark"

  [params.homeInfoParams]
    Title = "Your Blog Title"
    Content = '''
    Welcome! This is an experimental and fully automated analysis of the latest in tech, gaming, and the maker world from a Singaporean perspective.
    
    New articles are published regularly, so stay tuned!
    All content is AI-generated and unmanned.
    '''
  [[params.socialIcons]]
    name = "github"
    url = "https://github.com/your-username"


# --- Hugo Modules Configuration for PaperMod Theme ---
[module]
  [[module.imports]]
    path = "github.com/adityatelange/hugo-PaperMod"